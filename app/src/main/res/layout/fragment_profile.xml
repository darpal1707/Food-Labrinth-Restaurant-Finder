<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e3e3e3"
    tools:context="com.example.darpal.demo5.com.foodlabrinth.darpal.demo5.Login_Signup.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_person_black_24dp"/>

            <TextView
                android:id="@+id/tvuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:id="@+id/uploadimg"
        android:layout_weight="1"
        android:layout_margin="20dp"
        cardElevation="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_file_upload_black_24dp"/>

        <TextView
            android:id="@+id/myres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Photos"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:textColor="#000000"/>


    </android.support.v7.widget.CardView>

    </LinearLayout>

    <!--<Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/username"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:elevation="5dp" />-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="75dp"
        android:layout_below="@+id/username"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="#e3e3e3"
            android:dividerPadding="22dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_email_black_24dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feedback"
                    android:textAlignment="viewStart"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:text="Feedback"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_info_black_24dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/about"
                    android:textAlignment="viewStart"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:text="About"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_star_black_24dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rate"
                    android:textAlignment="viewStart"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:text="Rate us on Play Store"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_power_settings_new_black_24dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/res_logout"
                    android:textAlignment="viewStart"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:text="Sign Out"/>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>
